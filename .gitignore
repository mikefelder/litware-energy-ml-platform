# Ignore CLI configuration files
.terraformrc
terraform.rc

# Backup files
*.bak

# Lock files
.terraform.lock.hcl

# Local development environment files
.env
.env.local

# IDE and editor files
.vscode/
.idea/
*.swp
*.swo
*~
